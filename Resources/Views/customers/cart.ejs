<section class="cart py-16">
    <% if(session.cart) { %>
    <div class="order container mx-auto    xl:w-1/2">
        <div class="flex item-center border-b border-gray-300 pb-4">
            <img src="/img/cart.jpg"width="30px"height="30px" alt="">
            <h1 class="font-bold ml-4 text-2xl">Order Summary</h1>
        </div>

        <div class="pizza-list">

            <% for(let thali of Object.values(session.cart.items)) { %>
            <div class="flex items-center my-8">
                <img  class="w-24"src="/img/<%= thali.item.image %>" alt="">
                <div class="flex-1 ml-4"> 
                    <h1><%= thali.item.name %></h1>
                    <span><%= thali.item.size %></span>
                </div>
                <span class=" flex-1"><%= thali.qty %>thali</span>
                <span class="font-bold text-lg"><%= thali.item.price * thali.qty %></span>
            </div>  
            <% } %>

        </div>
        <hr>
        <div class="text-right py-4">
          <div>
            <span class="text-lg font-bold">Total Amount:</span>
            <span class="amount text-2xl font-bold ml-2"><%= session.cart.totalprice %></span>
          </div>
          <div>
              <% if(user) { %>
              <form action="/orders" method="POST" mt-12">
                  <input name="phone" class="border border-gray-400 p-2 w-1/2 mb-4"type="text"placeholder="Phone No">
                  <input name="address" class="border border-gray-400 p-2 w-1/2"type="text"placeholder="Address">
      
           <div class="mt-4"> 
            <button class="btn-primary px-6 py-2 rounded-full text-white font-bold" type="submit">Order Now</button> 
           </div>
             </form>
          </div>
          <% } else { %>
          <a href="/login"class="inline-block cursor-pointer btn-primary px-6 py-2 rounded-full text-white font-bold">
              Login To Continue.</a>
           <% } %>   
        </div>
    </div>

    <% } else { %> 
    <div class="empty-cart py-16">
        <div class="container mx-auto text-center">
            <h1 class="text-3xl font-bold mb-2">Cart Empty</h1>
            <p class="text-gray-500 text-lg mb-10">Lorem ipsum, dolor sit amet consectetur adipisicing elit.</br> 
                Iusto cum consequatur excepturi, numquam reiciendis obcaecati?</p>
            <img class="w-2/5 mx-auto" src="/img/thali3.jpg" alt="empty-cart">
            <a href="/" class="inline-block px-6 py-2 rounded-full btn-primary text-white font-bold mt-12">GO BACK</a>
        </div>  
    </div> 
    <% } %>
</section>